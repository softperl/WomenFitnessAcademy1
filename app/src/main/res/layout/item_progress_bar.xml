<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yayandroid.parallaxrecyclerview.ParallaxImageView
        android:id="@+id/hidden_parallax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ProgressBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_loading_height"
        android:layout_margin="@dimen/item_loading_margin"
        android:padding="@dimen/item_loading_padding" />
</FrameLayout>